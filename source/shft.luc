module shft (
    input firstNumber[16],  // input of 1st number
    input secondNumber[4], // inoput of 2nd number
    input alufn[2],         // input of alufn
    output answer[16]       // output of answer
  ) {

  always {
    answer = hx;
    if(alufn == b00){
      answer = firstNumber << (secondNumber);
    }
    if(alufn == b01){
      answer = firstNumber >> (secondNumber);
    }
    if(alufn == b11){
      answer = $signed(firstNumber) >>> (secondNumber);
    }
  }
}
